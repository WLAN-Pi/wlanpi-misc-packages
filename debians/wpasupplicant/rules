	# install -D wpa_passphrase $(CURDIR)/debian/wpasupplicant/usr/sbin/wpa_passphrase
	# if [ -d wpa_supplicant/eap_*.so ]; then \
	# 	install -d $(CURDIR)/debian/wpasupplicant/usr/lib/wpa_supplicant && \
	# 	cp wpa_supplicant/*.so $(CURDIR)/debian/wpasupplicant/usr/lib/wpa_supplicant/; \
	# fi
