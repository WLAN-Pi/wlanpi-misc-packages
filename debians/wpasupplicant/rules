#!/usr/bin/make -f

export DH_VERBOSE = 1

%:
	dh $@ --with=autoreconf

override_dh_auto_configure:
	cd wpa_supplicant && $(MAKE)

override_dh_auto_install:
	cd wpa_supplicant && \
	$(MAKE) install DESTDIR=$(CURDIR)/debian/wpasupplicant BINDIR=/usr/bin SBINDIR=/sbin

